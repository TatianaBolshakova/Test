<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTextStyle">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="MainTextStyleLight">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/my_blue_light</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="SignaturesTextStyle">
        <item name="android:textSize">@dimen/signatures_text_size</item>
        <item name="android:textColor">@color/my_gray</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">4dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="marginHorizontal">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/my_blue_light</item>
        <item name="android:backgroundTint">@color/my_blue</item>
        <item name="android:padding">@dimen/fab_padding</item>
        <item name="cornerRadius">5dp</item>
    </style>
    <style name="Til" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/my_lilac</item>
    </style>


</resources>